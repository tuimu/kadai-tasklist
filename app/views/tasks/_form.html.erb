<%= form_with(model: task, local: true) do |f| %>
    
    <% if task.errors.any? %>
    <div id="error_explanation">
        <ul>
            <%= task.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
        </ul>
    </div>
    <% end %>
    
    <%= f.label :status, 'Status: ' %>
    <%= f.text_field :status %>
    <br>
    <%= f.label :content, 'Task: ' %>
    <%= f.text_field :content %>
    <br>
    <%= f.submit 'Send'%>
<% end %>